config defaultToCurrentScreen true
config nudgePercentOf Size
config resizePercentOf Size

#alias SizeX 1358
#alias SizeY 614

alias SizeX screenSizeX
alias SizeY screenSizeY


alias full move screenOriginX;screenOriginY ${SizeX};${SizeY}
alias lefthalf move screenOriginX;screenOriginY ${SizeX}/2;${SizeY}
alias righthalf move screenOriginX+${SizeX}/2;screenOriginY ${SizeX}/2;${SizeY}
alias topleft corner top-left resize:${SizeX}/2;${SizeY}/2
alias topright corner top-right resize:${SizeX}/2;${SizeY}/2

bind return:shift;cmd ${full}
bind h:shift;cmd ${lefthalf}
bind l:shift;cmd ${righthalf}
bind u:shift;cmd ${topleft}
bind i:shift;cmd ${topright}
